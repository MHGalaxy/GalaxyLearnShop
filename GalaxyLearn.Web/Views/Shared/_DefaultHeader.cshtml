                    <div class="d-none xl:d-flex items-center px-20 py-20 border-bottom-light">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Login" asp-controller="Account" class="text-dark-1">ورود</a>
                            <a asp-action="Register" asp-controller="Account" class="text-dark-1 mr-30">ثبت نام</a>
                        }
                        else
                        {
                            <a onclick="logout();" class="text-dark-1 logout-btn">خروج</a>
                            <a asp-action="Dashboard" asp-controller="Home" asp-area="UserPanel" class="text-dark-1 mr-30">پنل کاربری</a>
                        }
                    </div>

                    @await Component.InvokeAsync("MenuGroupComponent")

                    <div class="mobile-footer px-20 py-20 border-top-light js-mobile-footer">
                        <div class="mobile-footer__number">
                            <div class="text-17 fw-500 text-dark-1">تماس با ما</div>
                            <div class="text-17 fw-500 text-purple-1">091201550580</div>
                        </div>

                        <div class="lh-2 mt-10">
